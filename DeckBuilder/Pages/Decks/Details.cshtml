@page
@using DeckBuilder.Models;
@model DeckBuilder.Pages.Decks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Deck</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Deck.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deck.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Deck.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deck.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Deck.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deck.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Deck.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deck.Date)
        </dd>
    </dl>
    <div>
        <h4>Deck List</h4>
        @foreach (Decklist dl in Model.Deck.Decklists)
        {
            <p>
                @dl.Count X <a asp-page="/Cards/Details" asp-route-id="@dl.Card.Id">@dl.Card.Name</a>
            </p>
        }
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Deck.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
